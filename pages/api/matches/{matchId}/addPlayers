import { ObjectId } from 'mongodb';
import { connectToDatabase } from '../../../app/lib/mongodb';

export default async function handler(req, res) {
  const { db } = await connectToDatabase();
  const { matchId } = req.query;

  if (req.method === 'PUT') {
    try {
      const playerIds = req.body.players; // Array of player IDs to add
      const response = await db.collection('matches').updateOne(
        { _id: new ObjectId(matchId) },
        { $addToSet: { players: { $each: playerIds } } } // Use $addToSet to avoid duplicates
      );

      if (!response.modifiedCount) {
        return res.status(404).json({ message: 'Match not found' });
      }

      res.status(200).json({ message: 'Players added to match' });
    } catch (error) {
      res.status(500).json({ error: error.message });
    }
  } else {
    res.status(405).end(`Method ${req.method} Not Allowed`);
  }
}